<%= form_for(@expedient) do |f| %>

  <%= error_messages_for @expedient %>

  <div class="field">
    <%= f.label :day, 'Dia da semana' %>
   	<%= f.select :day, Expedient::WEEKDAYS, :prompt => "Selecione o dia da semana" %>
  </div>
  <div class="field">
    <%= f.label :start_time, 'Início' %>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time, 'Fim' %>
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :quantity_lessons, 'Número de aulas' %>
    <%= f.text_field :quantity_lessons %>
  </div>

  <br/><hr><br/>

  <div class="actions">
    <%= f.submit 'Salvar' %>
  </div>
<% end %>

