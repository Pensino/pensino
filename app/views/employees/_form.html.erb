<%= form_for(@employee) do |f| %>

  <%= error_messages_for @employee %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :document %><br />
    <%= f.text_field :document %>
  </div>
  <div class="field">
    <%= f.label :registration %><br />
    <%= f.text_field :registration %>
  </div>
  <div class="field">
    <%= f.label :coordinator %><br />
    <%= f.check_box :coordinator %>
  </div>
  <div class="field">
    <%= f.label :professor %><br />
    <%= f.check_box :professor %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
	  <%= f.label :username %><br />
	  <%= f.text_field :username %>
  </div>
  <div class="field">
	  <%= f.label :password %><br />
	  <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
  	<% f.fields_for :addresses do |builder| %>
	  	<%= render :partial => '/shared/address_fields', :locals => { :f => builder }  %>
  	<% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

