<%= form_for(@matter) do |f| %>

  <%= error_messages_for @matter %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :quantity_lessons %><br />
    <%= f.text_field :quantity_lessons %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

