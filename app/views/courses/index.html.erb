<% title 'Courses' %>

<% content_for :main do %>
  <% @courses.each do |course| %>

    <h3><%= link_to course.name, course %></h3>
    <%= course.description %><br />
    Coordenador <%= course.employee.name %> - <%= course.steps %> <%= course.category_name %> - <%= course.grids.count %> Disciplinas <br />
    <%= course.registrations.count %> Alunos Registrados<br /><br />
  <% end %>

<% end %>

<% content_for :slidebar do %>
  <%= link_to new_course_path, :class => 'big button' do %>
    <span class="plus icon"></span>New Course
  <% end %>
<% end %>

